<% if @photo.new_record? %>
  <%= semantic_form_for [:admin, @photo] do |f| %>
    <%= f.inputs "Upload Photo" do %>
      <%= f.label 'Choose Photo:' %>
      <%= f.file_field :image %>
    <% end %>
    <%= f.buttons :commit %>
  <% end %>
<% else %>
  <%= semantic_form_for [:admin, @photo] do |f| %>
    <%= f.inputs "Photo" do %>
      <%= image_tag(photo.image.large) %>
      <%= f.input :image, :as => :file,
        :label => 'Upload New Photo',
        :required => false %>
    <% end %>
    <%= f.inputs "Photo Details" do %>
      <%= f.input :title %>
      <%= f.input :description %>
    <% end %>
    <%= f.inputs "Photo Metadata" do %>
      <%= f.input :author %>
      <%= f.input :credit %>
      <%= f.input :copyright %>
      <%= f.input :source %>
      <%= f.input :taken_at %>
      <%= f.input :digitized_at %>
    <% end %>
    <%= f.inputs "Status" do %>
      <%= f.input :moderated, :as => :radio %>
    <% end %>
    <%= f.buttons :commit %>
  <% end %>
<% end %>
